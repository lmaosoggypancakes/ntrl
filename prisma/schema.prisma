generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Park {
  id              Int   @default(autoincrement()) @id
  title           String 
  dogabble        Boolean
  activities      String[] 
  transportation  String[]
  region          Region
  utilities       String[]
  x               Float
  y               Float
  visits          Visit[]
}

model Visit {
  id              Int       @default(autoincrement()) @id
  visited         DateTime  @default(now())
  Park            Park?     @relation(fields: [parkId], references: [id])
  parkId          Int?
}
enum Region {
  Eastern 
  Southern  
  Northern
}


model Admin {
  api_key         String    @id @default(uuid())
  email           String
  name            String
}
